      display: block;
    }
    .map-button {
      position: absolute;
      /* 左上基準で座標を調整 */
      left: 500px; /* 例: ボタン1のX座標 */
      top: 400px;  /* 例: ボタン1のY座標 */
      padding: 10px 20px;
      background: rgba(255,255,255,0.8);
      border: 2px solid #555;
      border-radius: 8px;
      cursor: pointer;
      font-size: 16px;
